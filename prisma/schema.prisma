// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model MediaModel {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  overview String
  category String
  videoSource String
  trailerUrl String
  posterUrl String
  genre String
  releaseYear String
  age String
  duration String?
  totalSeasons String?
  episodes String?
}
